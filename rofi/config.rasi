/**
 * D-Nord : Rofi dmenu theme using the nord pallette
 */
* {
    background-color:      #2E3440;
    border-color:          rgba ( 59, 66, 82, 100 % );
    text-color:            rgba ( 216, 222, 233, 85 % );
    font:            "Jetbrains Mono 10";
}
 
#window {
    anchor:     north;
    location:   north;
    padding:1px 0px 0px 0px;
    width:      100%;
    children:   [ horibox ];
}
 
#horibox {
    orientation: horizontal;
    children:   [ prompt, entry, listview ];
}
#prompt{
padding: 0px 7px;

}


 
#listview {
    layout:     horizontal;
    spacing:    2px;
    lines:      100;
}
 
#entry {
    expand:     false;
    width:      10em;
    
}
 
#element {
    padding: 0px 7px 1px 7px;
}
#element selected {
    background-color: #3B4252;
    text-color: rgba ( 216, 222, 233, 100 % );
}
